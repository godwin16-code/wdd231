<svg width="1200" height="400" xmlns="http://www.w3.org/2000/svg">
  <!-- Background gradient -->
  <defs>
    <linearGradient id="skyGradient" x1="0%" y1="0%" x2="0%" y2="100%">
      <stop offset="0%" style="stop-color:#87CEEB;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#E0F6FF;stop-opacity:1" />
    </linearGradient>
  </defs>
  
  <!-- Sky -->
  <rect width="1200" height="400" fill="url(#skyGradient)"/>
  
  <!-- Mountains -->
  <polygon points="0,250 300,80 600,250" fill="#8B7355" opacity="0.8"/>
  <polygon points="500,250 800,100 1200,250" fill="#A0826D" opacity="0.8"/>
  
  <!-- Sun -->
  <circle cx="1000" cy="100" r="50" fill="#FFD700" opacity="0.9"/>
  
  <!-- Clouds -->
  <ellipse cx="200" cy="80" rx="60" ry="35" fill="white" opacity="0.8"/>
  <ellipse cx="150" cy="90" rx="40" ry="30" fill="white" opacity="0.7"/>
  <ellipse cx="250" cy="90" rx="45" ry="28" fill="white" opacity="0.7"/>
  
  <!-- Grass/Ground -->
  <rect y="250" width="1200" height="150" fill="#90EE90" opacity="0.9"/>
  
  <!-- Simple buildings silhouette -->
  <rect x="100" y="200" width="60" height="80" fill="#696969"/>
  <rect x="180" y="180" width="50" height="100" fill="#696969"/>
  <rect x="250" y="190" width="70" height="90" fill="#696969"/>
  
  <!-- Windows -->
  <rect x="110" y="210" width="8" height="8" fill="#FFE4B5"/>
  <rect x="125" y="210" width="8" height="8" fill="#FFE4B5"/>
  <rect x="140" y="210" width="8" height="8" fill="#FFE4B5"/>
  <rect x="110" y="230" width="8" height="8" fill="#FFE4B5"/>
  <rect x="125" y="230" width="8" height="8" fill="#FFE4B5"/>
  <rect x="140" y="230" width="8" height="8" fill="#FFE4B5"/>
  
  <!-- Text -->
  <text x="600" y="250" font-size="48" font-weight="bold" text-anchor="middle" fill="white" stroke="black" stroke-width="2">Idaho Falls</text>
  <text x="600" y="300" font-size="28" text-anchor="middle" fill="white" stroke="black" stroke-width="1">Chamber of Commerce</text>
</svg>
